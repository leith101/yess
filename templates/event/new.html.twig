{# templates/event/new.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Create a New Event{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <h1 class="text-center">Create a New Event</h1>

                {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                
                <div class="form-group">
                    {{ form_row(form.name, {'attr': {'class': 'form-control', 'placeholder': 'Event Name'}}) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.place, {'attr': {'class': 'form-control', 'placeholder': 'Event place'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.date) }}
                    {{ form_errors(form.date) }}
                    {{ form_widget(form.date) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.price, {'attr': {'class': 'form-control', 'placeholder': 'Event price'}}) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.image, {'attr': {'class': 'form-control', 'placeholder': 'Event image'}}) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.description, {'attr': {'class': 'form-control', 'placeholder': 'Event description'}}) }}
                </div>
                

                <!-- ... other form fields ... -->

                <button type="submit" class="btn btn-primary btn-block">Create Event</button>

                {{ form_end(form) }}

                <a href="{{ path('app_event_index') }}" class="btn btn-secondary btn-block mt-3">Back to Event List</a>
            </div>
        </div>
    </div>
{% endblock %}
